# Knowledge Graph RAG - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=4433
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/knowledge-graph-rag
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/knowledge-graph-rag

# QdrantDB Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=knowledge_embeddings
# For Qdrant Cloud: https://your-cluster.qdrant.tech
# QDRANT_API_KEY=your-qdrant-cloud-api-key

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:1.5b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small
USE_OLLAMA_FALLBACK=true

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,md,docx

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# =============================================================================
# SECURITY
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=knowledge-graph-rag:*
HOT_RELOAD=true

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and configure for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Database Pool Configuration
# DB_POOL_SIZE=10
# DB_POOL_MIN=2
# DB_POOL_MAX=20

# API Rate Limiting
# API_RATE_LIMIT=1000
# API_RATE_WINDOW=3600000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email Service (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Notification Service (Optional)
# WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_GRAPH_VISUALIZATION=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_API_KEY_MANAGEMENT=true

# =============================================================================
# DEPLOYMENT
# =============================================================================
# For Docker deployment
# DOCKER_NETWORK=knowledge-graph-network
# DOCKER_VOLUME_PATH=/var/lib/knowledge-graph

# For Kubernetes deployment
# K8S_NAMESPACE=knowledge-graph
# K8S_CONFIG_MAP=knowledge-graph-config

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# =============================================================================
# HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
